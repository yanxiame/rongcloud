<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.rong.sight"
    android:versionCode="2019102520"
    android:versionName="2.10.0 release" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <application>
        <activity
            android:name="io.rong.sight.player.SightPlayerActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="dollar_openBracket_applicationId_closeBracket"
                    android:pathPrefix="/sight/player"
                    android:scheme="rong" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.rong.sight.player.SightListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="io.rong.sight.record.SightRecordActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>